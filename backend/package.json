{
  "name": "bookit-backend",
  "version": "1.0.0",
  "description": "Backend for BookIt Experiences application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "db:migrate": "psql -U $DB_USER -d $DB_NAME -f src/db/migrations/001_initial_schema.sql",
    "db:seed": "psql -U $DB_USER -d $DB_NAME -f src/db/seeds/001_sample_data.sql",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.9",
    "@types/pg": "^8.10.7",
    "@types/cors": "^2.8.15",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0"
  }
}